#include <stdio.h>
#include <locale.h>

int main() {
    setlocale(LC_ALL, "");
    
    char disciplinas[3][50];
    float notas[3][3];
    float medias[3];
    int peso[3] = {3, 3, 4};
    int i, j;


    for (i = 0; i < 3; i++) {
        printf("Informe a disciplina %d: ", i + 1);
        scanf("%s", disciplinas[i]);

        printf("\nInforme a primeira nota em %s: ", disciplinas[i]);
        scanf("%f", &notas[i][0]);

        printf("\nInforme a segunda nota em %s: ", disciplinas[i]);
        scanf("%f", &notas[i][1]);

        printf("\nInforme a terceira nota em %s: ", disciplinas[i]);
        scanf("%f", &notas[i][2]);
    }


    printf("\nResultados:\n");
    for (i = 0; i < 3; i++) {
       
        float soma = 0.0;
        for (j = 0; j < 3; j++) {
            soma += notas[i][j] * peso[j];
        }
        medias[i] = soma / 10.0; 

        printf("Disciplina: %s\n", disciplinas[i]);
        printf("MÃ©dia: %.2f\n", medias[i]);
    }

    return 0;
}
