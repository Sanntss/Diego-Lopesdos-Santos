#include <stdio.h>

int main() {
    float notas[4];
    float soma = 0, media;
    
    // Leitura das notas
    printf("Digite as 4 notas:\n");
    for(int i = 0; i < 4; i++) {
        printf("Nota %d: ", i+1);
        scanf("%f", &notas[i]);
        soma += notas[i];
    }
    
    // Calcula a média
    media = soma / 4.0;
    
    // Verifica a situação do aluno
